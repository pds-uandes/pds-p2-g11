
<div class="container" style='margin-top:15px'>
    <div class="text-center">
    <h1>Results</h1>
    <br>
    <h3>Puntaje: <%= @task.score %></h3>
    </div>
    <br>
    <% @questions.each_with_index do |question, index| %>
    <div>
        <h6>
        <% if @task.wrongs.include?(question.id) %>
            ❌
        <% else %>
            ✅
        <% end %>
        <%= index + 1 %>) <%= question.question %>
         </h6>
        <p>📈<b> Dificultad:</b> <%= question.difficulty %> || 📖 <b>Tema:</b> <%= question.topic %></p>
        <% if @task.wrongs.include?(question.id) %>
        <p>❔ <b>Hint:</b> <%= question.hint %></p>
        <% end %>
    </div>
    <% end %>

    <% if !@task.first_time %>
        <% @task.answered.clear %>
        <% @task.first_time = true %>
        <% @task.save %>
    <% end %>

    <% if @task.wrongsaux.length == 0 ||  @task.answered.length == @task.wrongsaux.length %>
        <% @user.task += 1 %>
        <% @user.save %>
        <% @user.tasks.destroy_all %>
        <%= link_to 'Ir a inicio', root_path, class: 'btn btn-primary' %>

    <% else %>
        <% if @task.answered.length != @task.wrongsaux.length %>
             <% @task.redo = true %>
             <% @task.save %>
            <%= link_to 'Go to Redo Questions', multiple_choice_question_path(@task.wrongs.first), class: 'btn btn-primary' %>
        <% end %>
    <% end %>
  </div>



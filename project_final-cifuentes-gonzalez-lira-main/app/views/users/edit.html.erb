<%# app/views/users/edit.html.erb %>
<div class="container">
  <h1>Edit User: </h1>
  <h2><%= @user.full_name %></h2>

  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :role, class: 'control-label' %>
      <div class="input-group mb-3">
        <% if current_user.admin? %>
          <%= form.select :role, User.roles.keys, {}, class: 'form-select', aria_label: 'Role select' %>
        <% elsif current_user.supervisor? %>
          <%= form.select :role, [:normal, :executive, :supervisor], {}, class: 'form-select', aria_label: 'Role select' %>
        <% end %>
        <span class="input-group-text"><i class="bi bi-caret-down-fill"></i></span>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit "Update", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

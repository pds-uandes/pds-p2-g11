<div class="container">
  <h1>All users</h1>
  <div class="row">
    <div class="col-md-4">
      <h2>Normal Users</h2>
      <%= render partial: "user", collection: @normal_users, as: :user, locals: { show_view_button: true } %>
    </div>
    <div class="col-md-4">
      <h2>Executive Users</h2>
      <%= render partial: "user", collection: @executive_users, as: :user, locals: { show_view_button: true } %>
    </div>
    <% if current_user.admin? %>
      <div class="col-md-4">
        <h2>Supervisor Users</h2>
        <%= render partial: "user", collection: @supervisor_users, as: :user, locals: { show_view_button: true } %>
      </div>
    <% end %>
  </div>
</div>
